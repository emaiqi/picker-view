page {
	background-color: #f2f2f2;
}

.divider {
	width: 100%;
	height: 1px;
	background-color: #f2f2f2;
}

.item {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	width: 100%;
	box-sizing: border-box;
	padding: 20rpx;
	background-color: #ffffff;
}

.block {
	margin-top: 20rpx;
	background-color: #ffffff;
	padding: 20rpx;
}

.item-title {
	color: #333333;
	font-family: Microsoft YaHei;
	font-size: 12pt;
	margin-right: 20rpx;
	white-space:nowrap;
}

.item-text {
	color: #333333;
	font-family: Microsoft YaHei;
	font-size: 12pt;
	margin-right: 20rpx;
	white-space:wrap;
	word-wrap:break-word;
	text-align: end;
}
.item-text-city{
	font-size: 11pt;
	font-weight: 100;
	width: 450rpx;
	margin-right:0rpx;
	overflow: hidden;
	text-overflow:ellipsis;
	-o-text-overflow:ellipsis;
	-webkit-text-overflow:ellipsis;
	-moz-text-overflow:ellipsis;
	white-space:nowrap;
}

.small-text {
	color: #999999;
	font-family: Microsoft YaHei;
	font-size: 10pt;
	margin-top: 20rpx;
}

input {
	flex-grow: 1;
	font-family: Microsoft YaHei;
	font-size: 11pt;
	text-align: end;
}

textarea {
	flex-grow: 1;
	font-family: Microsoft YaHei;
	font-size: 11pt;
	margin-top: 20rpx;
}

.avatar {
	width: 100rpx;
	height: 100rpx;
	margin: 10rpx;
}

.city-picker-bg {
	position: fixed;
	width: 100%;
	height: 100%;
	top: 0;
	bottom: 0;
	z-index:888;
}

.show {
	display: block;
}

.hide {
	display: none;
}

#city-picker-cover {
	width: 100%;
	position: absolute;
	top: 0;
	bottom: 0;
	background-color: #333333;
	opacity: 0.7;
}

#city-picker {
	position: absolute;
	bottom: 0;
	width: 100%;
	background-color: #ffffff;
}

#city-title {
	box-sizing: border-box;
	padding: 10px;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
}

.city-title-item {
	font-family: Microsoft YaHei;
	font-size: 12pt;
	color: #333333;
}

.city-text-item {
	font-family: Microsoft YaHei;
	font-size: 11pt;
	color: #333333;
	white-space:nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	height: 20px;
}

#picker-container {
	width: 100%;
	padding: 5px;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
}

.city-scroll {
	width: 30%;
	height: 222px;
	text-align: center;
}

#cover {
	width: 100%;
	height: 222px;
	position: absolute;
}

.cover-cover {
	background-color: #999999;
	opacity: 0.5;
	width: 100%;
	height: 110px;
}

.divider-big {
	background-color: #666666;
	width: 100%;
	height: 1px;
}

.cover-no {
	width: 100%;
	height:40rpx;
}

.up-white {
	width: 100%;
	height: 106px;
}

.down-white {
	width: 100%;
	height: 97px;
}